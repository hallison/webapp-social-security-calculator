<%= simple_form_for proponent do |form| %>
  <div class="row">
    <%= form.input :name, label: "Nome", validation: false, disabled: true, readonly: true, wrapper_html: { class: "col-6" } %>
    <%= form.input :document_br_cpf, label: "CPF", disabled: true, readonly: true, wrapper_html: { class: "col-2" } %>
    <%= form.input :birth_date, label: "Data de Aniversário", as: :date, start_year: Date.today.year - 18, end_year: Date.today.year - 75, order: [:day, :month, :year], disabled: true, readonly: true, wrapper_html: { class: "col-4" } %>
  </div>

  <div class="row">
    <%= form.input :address_public_place, label: "Endereço", disabled: true, readonly: true, wrapper_html: { class: "col-8" } %>
    <%= form.input :address_number, label: "Número", disabled: true, readonly: true, wrapper_html: { class: "col-4" } %>
  </div>

  <div class="row">
    <%= form.input :address_district, label: "Bairro", disabled: true, readonly: true, wrapper_html: { class: "col-5" } %>
    <%= form.input :address_city, label: "Cidade", disabled: true, readonly: true, wrapper_html: { class: "col-3" } %>
    <%= form.input :address_state, label: "Estado", disabled: true, readonly: true, wrapper_html: { class: "col-1" } %>
    <%= form.input :address_postalcode, label: "CEP", disabled: true, readonly: true, wrapper_html: { class: "col-3" } %>
  </div>

  <div class="row">
    <%= form.input :phone_contact, label: "Telefone para contato", disabled: true, readonly: true, wrapper_html: { class: "col-3" } %>
    <%= form.input :phone_reference, label: "Telefone para referência", disabled: true, readonly: true, wrapper_html: { class: "col-3"} %>
  </div>

  <div class="row">
    <%= form.input :salary_gross, label: "Salário Bruto", disabled: true, readonly: true, wrapper_html: { class: "col-3" } %>
    <%= form.input :salary_net, label: "Salário Líquido", disabled: true, readonly: true, wrapper_html: { class: "col-3" } %>
  </div>

  <a href="<%= edit_proponent_path(proponent) %>" class="btn btn-outline-primary">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
    </svg>
    Editar
  </a>

  <a href="<%= proponents_path %>" class="btn btn-outline-primary">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
      <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
    </svg>
    Cancelar
  </a>
<% end %>
